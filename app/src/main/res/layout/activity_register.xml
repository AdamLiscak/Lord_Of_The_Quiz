<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activities.RegisterActivity">


    <EditText
        android:id="@+id/editText_register_name"
        android:layout_width="213dp"
        android:layout_height="36dp"
        android:background="#000000"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:selectAllOnFocus="false"
        android:shadowColor="#00FFFFFF"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.239" />


    <EditText
        android:id="@+id/editText_register_password"
        android:layout_width="213dp"
        android:layout_height="36dp"
        android:background="#000000"
        android:ems="10"
        android:hint="Passwort"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:selectAllOnFocus="false"
        android:shadowColor="#00FFFFFF"
        android:singleLine="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_name"
        app:layout_constraintVertical_bias="0.125" />


    <Button
        android:id="@+id/button"
        android:layout_width="154dp"
        android:layout_height="47dp"
        android:background="@drawable/custom_button"
        android:onClick="register"
        android:text="registrieren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_password"
        app:layout_constraintVertical_bias="0.222" />


    <TextView
        android:id="@+id/textView_register_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0FFFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editText_register_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>