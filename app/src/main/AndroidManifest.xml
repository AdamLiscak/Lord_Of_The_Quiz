<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quiz_lord">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.quiz_lord.activities.DesignQuestionActivity"></activity>
        <activity android:name="com.example.quiz_lord.activities.QuizBuilderHeader" />
        <activity android:name="com.example.quiz_lord.activities.QuizBuilderActivity" />
        <activity android:name="com.example.quiz_lord.activities.ScoreBoardActivity" />
        <activity android:name="com.example.quiz_lord.activities.QuizHubActivity" />
        <activity android:name="com.example.quiz_lord.activities.QuizBuilderUploadActivity" />
        <activity android:name="com.example.quiz_lord.activities.QuizResultActivity" />
        <activity android:name="com.example.quiz_lord.activities.QuestionSeparatorActivity" />
        <activity android:name="com.example.quiz_lord.activities.QuizStarterActivity" />
        <activity android:name="com.example.quiz_lord.activities.GameActivity" />
        <activity android:name="com.example.quiz_lord.activities.RegisterActivity" />
        <activity android:name="com.example.quiz_lord.activities.Start" />
        <activity android:name="com.example.quiz_lord.activities.Anmelden" />
        <activity android:name="com.example.quiz_lord.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>